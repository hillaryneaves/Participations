        <ListBox x:Name="lstPokemons" Margin="0,0,557,0" SelectionChanged="lstPokemons_SelectionChanged"/>
        <Image x:Name="imgPoke" HorizontalAlignment="Left" Height="174" Margin="431,133,0,0" VerticalAlignment="Top" Width="192"/>
        <Button x:Name="btnSwitch" Content="Switch" HorizontalAlignment="Left" Margin="477,354,0,0" VerticalAlignment="Top" Height="34" Width="106" Click="btnSwitch_Click"/>
        <Label x:Name="lblWeight" Content="Weight:" HorizontalAlignment="Left" Margin="619,319,0,0" VerticalAlignment="Top" Height="30" Width="115"/>
        <Label x:Name="lblHeight" Content="Height:" HorizontalAlignment="Left" Margin="357,319,0,0" VerticalAlignment="Top" Height="30" Width="118"/>

    </Grid>
</Window>
